#:kivy 1.8.0

TestGame:

<TestGame>:
    gameworld: gameworld
    pos: root.pos
    size: root.size
    GameWorld:
        id: gameworld
        gamescreenmanager: gamescreenmanager
        GameView:
            focus_entity: False
            updateable: False
            gameworld: root.gameworld
            pos: root.pos
            size: root.size
        GameMap:
            system_id: 'map'
            map_size: (2000, 2000)
            gameworld: root.gameworld
        QuadTreePointRenderer:
            system_id: 'quadtree_renderer'
            render_information_from: 'position'
            gameworld: root.gameworld
        GameSystem:
            system_id: 'position'
            gameworld: root.gameworld
        AsteroidSystem:
            system_id: 'asteroids'
            gameworld: root.gameworld
        CymunkPhysics:
            gameworld: root.gameworld
        PhysicsRenderer:
            gameworld: root.gameworld
        GameScreenManager:
            id: gamescreenmanager
            size: root.size
            pos: root.pos
            gameworld: root.gameworld


<GameScreenManager>:
    MainScreen:
        id: main_screen


<MainScreen@GameScreen>:
    name: 'main'
    FloatLayout:
        BoxLayout:
            size_hint: (.2, .1)
            pos_hint: {'x': .4, 'y': .1}
            orientation: 'vertical'
            DebugPanel:


<DebugPanel>:
    Label:
        pos: root.pos
        size: root.size
        halign: 'center'
        valign: 'middle'
        color: (1, 1, 1, 1)
        text: 'FPS: ' + root.fps if root.fps != None else 'FPS:'

